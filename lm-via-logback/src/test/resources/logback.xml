<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder class="unquietcode.tools.logmachine.impl.logback.PlaintextLogbackEncoder"/>
	</appender>

	<appender name="SERVER" class="unquietcode.tools.logmachine.impl.logback.LogServerAppender">
		<retention>50</retention>
		<port>9000</port>
	</appender>

	<logger name="unquietcode.tools.logmachine.TestLogbackLogServer" level="DEBUG">
		<appender-ref ref="SERVER"/>
	</logger>

	<root level="debug">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>